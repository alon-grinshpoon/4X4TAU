<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application
            icon="icons/radio_viewIcon.png">
         <run
               class="il.ac.tau.cs.wirelesslab.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="il.ac.tau.cs.wirelesslab.Perspective"
            icon="icons/radio_viewIcon.png"
            id="4X4Plugin.perspective"
            name="RCP Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="4X4Plugin.viewMenu"
               label="View">
            <command
                  commandId="org.eclipse.ui.views.showView"
                  hoverIcon="icons/open_view.gif"
                  icon="icons/open_view_hover.gif"
                  label="Open Views"
                  style="push"
                  tooltip="Configure different devices">
            </command>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  hoverIcon="icons/exit_hover.gif"
                  icon="icons/exit_active.gif"
                  label="Exit"
                  style="push"
                  tooltip="Exit the application">
            </command>
         </menu>
         <menu
               id="4X4Plugin.helpMenu"
               label="Help">
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  hoverIcon="icons/help_hover.gif"
                  icon="icons/help_active.gif"
                  label="About"
                  mode="FORCE_TEXT"
                  style="push"
                  tooltip="About 4X4Tau Product">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="il.ac.tau.cs.wirelesslab.views.ViewFavorites"
            icon="icons/radio_viewIcon.png"
            id="4X4Plugin.viewFavorites"
            name="Favorites"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            class="il.ac.tau.cs.wirelesslab.views.ViewPlayer"
            icon="icons/radio_viewIcon.png"
            id="4X4Plugin.viewPlayer"
            name="Frequency Setter"
            restorable="true">
      </view>
      <view
            class="il.ac.tau.cs.wirelesslab.views.ViewDevices"
            icon="icons/radio_viewIcon.png"
            id="4X4Plugin.viewDevices"
            name="Devices"
            restorable="true">
      </view>
      <view
            class="il.ac.tau.cs.wirelesslab.views.ViewSpectrogram"
            icon="icons/radio_viewIcon.png"
            id="4X4Plugin.viewSpectrogram"
            name="DSP Screens"
            restorable="true">
      </view>
      <view
            class="il.ac.tau.cs.wirelesslab.views.ViewRecord"
            icon="icons/radio_viewIcon.png"
            id="4X4Plugin.viewRecord"
            name="Recorder/Player"
            restorable="true">
      </view>
      <view
            class="il.ac.tau.cs.wirelesslab.views.ViewSkin"
            icon="icons/radio_viewIcon.png"
            id="4X4Plugin.viewSkin"
            name="Skins Chooser"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="4X4Plugin.viewFavorites"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.editorss">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="*">
         <view
               id="4X4Plugin.viewPlayer"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="4X4Plugin.viewDevices"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="4X4Plugin.viewSpectrogram"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="4X4Plugin.viewRecord"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="4X4Plugin.viewSkin"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.editorss">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
